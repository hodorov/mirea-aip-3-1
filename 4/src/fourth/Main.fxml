<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import fourth.controls.fontpicker.FontPicker?>
<VBox prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fourth.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <HBox>
        <padding>
            <Insets bottom="10.0"/>
        </padding>
        <Button mnemonicParsing="false" text="Открыть файл" fx:id="openBtn"/>
        <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" text="Сохранить файл" fx:id="saveBtn">
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
        </Button>
        <Pane HBox.hgrow="ALWAYS"/>
        <FontPicker fx:id="fontPicker" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
            <HBox.margin>
                <Insets left="5.0"/>
            </HBox.margin>
        </FontPicker>
    </HBox>
    <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" text="Выберите файл" VBox.vgrow="ALWAYS"/>
</VBox>
