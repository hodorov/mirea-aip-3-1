<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import thirdDotOne.controls.fontpicker.FontPicker?>
<HBox prefHeight="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thirdDotOne.MainController">
   <children>
      <VBox>
         <children>
            <Label fx:id="label" text="Метка" />
            <TextField fx:id="textField" text="Текстовое поле">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" text="Тексотвая область&#10;Тексотвая область&#10;Тексотвая область&#10;Тексотвая область" VBox.vgrow="ALWAYS" />
         </children>
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin>
      </VBox>
      <VBox prefWidth="230">
         <HBox>
            <Label maxHeight="1.7976931348623157E308" text="Цвет текста:"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ColorPicker fx:id="textColor">
               <HBox.margin>
                  <Insets left="5.0"/>
               </HBox.margin>
            </ColorPicker>
         </HBox>
         <HBox layoutX="10.0" layoutY="10.0">
            <VBox.margin>
               <Insets top="10.0"/>
            </VBox.margin>
            <Label maxHeight="1.7976931348623157E308" text="Цвет фона:"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ColorPicker fx:id="backgroundColor">
               <HBox.margin>
                  <Insets left="5.0"/>
               </HBox.margin>
            </ColorPicker>
         </HBox>
         <HBox layoutX="10.0" layoutY="45.0">
            <children>
               <Label maxHeight="1.7976931348623157E308" text="Шрифт:"/>
               <FontPicker fx:id="fontPicker" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                  <HBox.margin>
                     <Insets left="5.0"/>
                  </HBox.margin>
               </FontPicker>
            </children>
            <VBox.margin>
               <Insets top="10.0"/>
            </VBox.margin>
         </HBox>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
